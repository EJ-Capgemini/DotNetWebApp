                        <div class="sing-up-button d-none d-lg-block">
                            <form class="form-inline sing-up-button d-none d-lg-block" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
